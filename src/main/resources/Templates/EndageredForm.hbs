{{#partial "title"}}
    Here is a report on the Endangered Animal.
{{/partial}}



{{#partial "content"}}
    <body style="background-color: lightslategray;" background-size:cover;">
    <form action="/report"   method="post">
        <div class="form-group">
            <label for="name">Name of the Endagered Animal:{{animalName}}</label>
            <input id="name" name="name" class="form-control" type="text" required>
        </div>
        <div class="form-group">
            <label for="age">Health of the Endagered Animal: {{health}}</label>
            <section id="health" name="health" type="text" class="form-control">
                <option value=""></option>
                <option value="healthy">Healthy</option>
                <option value="ill">Ill</option>
                <option value="okay">Okay</option>
            </section>
        </div>
        <div class="form-group">
            <label for="age">Age: {{age}}</label>
            <select id="age" name="age" type="text" class="form-control">
                <option value=""></option>
                <option value="Newborn">Newborn</option>
                <option value="Young">Young</option>
                <option value="Adult">Adult</option>
            </select>
        </div>


        <button class="btn btn-success" href="/SuccessEndagered" type="submit"> Submit</button>

    </form>
    </body>
{{/partial}}

